{
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nestjs-backend/src",
  "compilerOptions": {
    "assets": [
      "**/*.proto"
    ],
    "watchAssets": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true
        }
      }
    ],
    "webpack": true,
    "tsConfigPath": "apps/nestjs-backend/tsconfig.json"
  },
  "monorepo": true,
  "root": "apps/nestjs-backend",
  "projects": {
    "nestjs-backend": {
      "type": "application",
      "root": "apps/nestjs-backend",
      "entryFile": "main",
      "sourceRoot": "apps/nestjs-backend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nestjs-backend/tsconfig.json"
      }
    },
    "blockchain-app": {
      "type": "application",
      "root": "apps/blockchain-app",
      "entryFile": "main",
      "sourceRoot": "apps/blockchain-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/blockchain-app/tsconfig.app.json"
      }
    },
    "user": {
      "type": "library",
      "root": "libs/user",
      "entryFile": "index",
      "sourceRoot": "libs/user/src",
      "compilerOptions": {
        "tsConfigPath": "libs/user/tsconfig.lib.json"
      }
    }
  }
}
