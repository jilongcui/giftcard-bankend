{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@app/chain": [
        "libs/chain/src"
      ],
      "@app/chain/*": [
        "libs/chain/src/*"
      ],
      "@app/common": [
        "libs/common/src"
      ],
      "@app/common/*": [
        "libs/common/src/*"
      ],
      "@app/modules": [
        "libs/modules/src"
      ],
      "@app/modules/*": [
        "libs/modules/src/*"
      ],
      "@app/shared": [
        "libs/shared/src"
      ],
      "@app/shared/*": [
        "libs/shared/src/*"
      ],
      "@app/crichain": [
        "libs/crichain/src",
        "libs/crichain/src"
      ],
      "@app/crichain/*": [
        "libs/crichain/src/*",
        "libs/crichain/src/*"
      ]
    }
  }
}